{% load staticfiles %}
doctype html
html(lang='en')
  head
    title Write a new Post
    link(rel='stylesheet', href='{% static "css/global.css" %}', type='text/css')
  body
    div#container
      div#holder
        div#main
          h1 You are in the  
            a.black(href='/index/') Jungle
          - if jungle
            div#bar.green
              div#title
                span {{ jungle.name }}
              div#body
                a(href='/jungles/{{ jungle.id }}/').white Cancel
            div#bar.yellow
              form(name='write_post', method='POST', action='/jungles/{{ id }}/write_post/')
                {% csrf_token %}
                div#title
                  span Write a post for 
                    select(name='displayed')
                      - for user in users
                        option(value='{{ user.username }}') {{ user.username }}
                div#body
                    textarea(id='new_post', name='new_post').new_post
                    input(type='submit', name='submit', value='Write post!')
          - else
            font(color='red') No such jungle!